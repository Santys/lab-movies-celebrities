<h2>Edit movie</h2>
<form action="/movies/{{selectedMovie._id}}" method="POST">
    <label>Title:</label>
    <input type="text" name="title" value="{{selectedMovie.title}}"/>
    
    <label>Genre:</label>
    <input type="text" name="genre" value="{{selectedMovie.genre}}"/>

    <label>Plot:</label>
    <input type="text" name="plot" value="{{selectedMovie.plot}}"/>
    
    <label>Choose a cast:</label>
    <select name="cast" multiple>
        {{#each allCelebrities}}
            {{#isIncluded id ../movieCast}}
                <option value="{{this.id}}" selected>{{this.name}}</option>
            {{else}}
                <option value="{{this.id}}">{{this.name}}</option>
            {{/isIncluded}}
        {{/each}}
    </select>

    <button type="submit">Edit movie</button>
</form>